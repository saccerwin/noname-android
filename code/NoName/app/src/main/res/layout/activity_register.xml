<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.noname.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_20dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp"
        android:paddingTop="@dimen/pad_20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký tài khoản"
            android:textSize="30dp"
            android:textColor="@color/main_color_green"
            android:paddingBottom="@dimen/pad_20dp"
            style="@style/Base.Widget.AppCompat.SeekBar" />

        <EditText
            android:id="@+id/edtName"
            style="@style/editext_graybg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/pad_10dp"
            android:layout_marginBottom="@dimen/pad_10dp"
            android:drawableLeft="@drawable/ic_name"
            android:inputType="text"
            android:hint="@string/name" >
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edtEmail"
            style="@style/editext_graybg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_email"
            android:hint="@string/usernameEmail"
            android:inputType="textEmailAddress" >
            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/edtPassword"
            style="@style/editext_graybg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/pad_10dp"
            android:drawableLeft="@drawable/ic_password"
            android:hint="@string/password"
            android:inputType="textPassword" >
            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/edtPhone"
            style="@style/editext_graybg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/pad_10dp"
            android:drawableLeft="@drawable/ic_phone"
            android:hint="Số điện thoại"
            android:inputType="number" >
            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/edtLocation"
            style="@style/editext_graybg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/pad_10dp"
            android:drawableLeft="@drawable/icon_coutry"
            android:hint="Địa chỉ"
            android:inputType="text" >
        </EditText>

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />


        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/pad_10dp"
                android:layout_weight="1"
                android:background="@color/accent"
                android:text="@string/register" />
            <Button
                android:id="@+id/btnCancel"
                android:background="@color/accent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/pad_10dp"
                android:layout_weight="1"
                android:text="@string/cancel" />

        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/login_VIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/pad_10dp"
                android:src="@drawable/fb_login" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>
